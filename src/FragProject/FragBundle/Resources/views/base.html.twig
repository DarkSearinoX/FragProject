<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE html>

<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en">

<head>

    <title>{% block title %}FragProt :: Clusters of short protein fragments{% endblock %}</title>

    <meta http-equiv="content-type" content="application/xhtml+xml; charset=UTF-8" />
    <meta name="author" content="MeloLab" />
    <meta name="description" content="Site Description Here" />
    <meta name="keywords" content="keywords, here" />
    <meta name="robots" content="index, follow, noarchive" />
    <meta name="googlebot" content="noarchive" />

{% block stylesheets %}
    <link href="{{ asset('bundles/fragprojectfrag/css/consecutive.css') }}" type="text/css" rel="stylesheet" />
    <link href="{{ asset('bundles/fragprojectfrag/css/main.css') }}" type="text/css" rel="stylesheet" />
{% endblock %}
{% block javascripts %}
    <script src="{{ asset('bundles/melolabeva/js/jquery-1.9.1.js') }}" type="text/javascript"></script>
    <script src="{{ asset('bundles/melolabeva/js/main.js') }}" type="text/javascript"></script>
{% endblock %}

</head>

<body>
    <!-- Wrap -->
    <div id="wrapper">
        <div id="header-wrapper">
            <!-- Header -->
            <div id="header" class="container">
                <div id="logo">
                    <h1><a href="{{ path('fragprot_home') }}">Frag<span class="gray">Prot</span></a></h1>
                    <p>A webserver of clusters of short protein fragments</p>
                </div>         
                <div id="menu">
                    <ul>
                    {% block menu %}
                        <li class="{%block menu_home%}{%endblock%}"><a href="{{ path('fragprot_home') }}"><span>Home</span></a></li>
                        <li class="{%block menu_search%}{%endblock%}"><a href="{{ path('search_home') }}"><span>Search</span></a></li>
                        <li class="{%block menu_contact%}{%endblock%}"><a href="{{ path('fragprot_home') }}"><span>Contact</span></a></li>
                    {% endblock %}  
                    </ul>
                </div> 
                <!-- <div id="searchform">   
                    <form method="post" class="search" action="#" >
                        <p><input name="search_query" class="textbox" type="text" />
                        <input name="search" class="button" type="submit" value="search" /></p>
                    </form>
                </div> -->

            </div>
        </div>
        <!--Content Wrap -->
        <div id="page-wrapper">
            <div id="page">
                <div id="sidebar">
                    {% block sidepanel %}
                    {% endblock %}
                    <!--<ul>
                        <h2>Sidebar Menu</h2>
                        {% block sidemenu %}
                        {#<li><a href="{{ path('eva_home') }}">Home</a></li>#}
                        {% endblock %}
                    </ul>-->
                </div>
                <div id="content">
                    <div class="post">
                        <h2 class="title">{% block page_title %}{%endblock%}</h2>
                        <div class="entry">
                            {% block flash_messages %}
                                {% for flashMessage in app.session.flashbag.get('notice') %}
                                    <p class="flash-notice">
                                        {{ flashMessage }}
                                    </p>
                                {% endfor %}
                            {% endblock %}
                            {% block main %}
                            {% endblock %}
                        </div>
                    </div>
                <!--End content-wrap-->
                </div>
                <div style="clear: both;">&nbsp;</div>    
            </div>
        </div>
    <!-- END Wrap -->
    </div>
    <!-- Footer -->
    <div id="footer">
        <p>             
        &copy; 2013 MeloLab | Felipe Rodriguez Valenzuela, Bioinformatics Engeniering Student,<br/>P. Universidad Catolica de Chile | Alameda 340. Santiago, Chile<br/>Email: ferodriguez@alumnos.utalca.cl &nbsp;&nbsp;
        Design by <a href="http://www.freecsstemplates.org/">FCT</a>
        </p>
    </div>  
</body>
</html>
